<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Recycler" parent="AppTheme">
        <item name="editTextColor">@color/ordinaryText</item>
    </style>
    <style name="Recycler.Name">
        <item name="android:textSize">19sp</item>
    </style>
    <style name="Recycler.ButtonDetails">
        <item name="android:textColor">#051D53</item>
        <item name="android:textSize">15sp</item>
    </style>
    <style name="Recycler.Details">
        <item name="android:textSize">11sp</item>
    </style>

    <style name="Details" parent="AppTheme">
        <item name="editTextColor">@color/ordinaryText</item>
    </style>
    <style name="Details.Name">
        <item name="android:textSize">19sp</item>
    </style>
    <style name="Details.Details">
        <item name="android:textSize">15sp</item>
    </style>
    <style name="Details.Liked">
        <item name="android:textSize">17sp</item>
        <item name="colorAccent">@color/ordinaryText</item>
    </style>
    <style name="Details.Comment">
        <item name="android:textSize">15sp</item>
        <item name="colorAccent">@color/ordinaryText</item>
    </style>

</resources>
